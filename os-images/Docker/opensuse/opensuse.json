{
  "_comment": "Build with `packer build opensuse.json`",
  "builders": [
    {
      "type": "docker",
      "image": "{{ user `docker_image` }}",
      "pull": true,
      "commit": true,
      "changes": [
        "Entrypoint [\"/bin/sh\", \"-c\"]",
        "CMD [\"/bin/bash\"]",
        "LABEL Name=\"{{ user `build_type` | upper }} // {{ user `os_name` }} {{ user `os_version` }}\"",
        "LABEL OS-Name={{ user `os_name` }}",
        "LABEL OS-Version={{ user `os_version` }}",
        "LABEL BuildDate={{ isotime }}",
        "LABEL BuildType={{ user `build_type` | upper }}",
        "LABEL CreatedBy=packer",
        "LABEL Owner=SRE",
        "LABEL Description=\"{{ user `build_type` | upper }} Image of {{ user `os_name` }} {{ user `os_version` }}\""
      ],
      "message": "{{ user `build_type` | upper }} Image of {{ user `os_name` }} {{ user `os_version` }} on {{ isotime }}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "zypper --non-interactive --gpg-auto-import-keys refresh",
        "zypper --non-interactive --gpg-auto-import-keys update",
        "zypper --non-interactive install --auto-agree-with-licenses dbus-1 systemd git vim sudo curl openssh",
        "rm -rf /tmp/* && zypper --non-interactive clean -a"
      ]
    },
    {
      "type": "shell-local",
      "script": "os-images/Docker/files/prep-linux.sh",
      "environment_vars": [
        "SALT_PR={{ user `salt_pr` }}",
        "DISTRO_SLUG={{ user `distro_slug` }}",
        "PY_VERSION=2"
      ]
    },
    {
      "type": "file",
      "generated": true,
      "source": ".tmp/{{ user `distro_slug` }}/conf/minion",
      "destination": "/tmp/gitfs.conf",
      "direction": "upload"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /etc/salt/minion.d",
        "sudo mv /tmp/gitfs.conf /etc/salt/minion.d/"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/{{ user `distro_slug` }}/states",
      "local_pillar_roots": ".tmp/{{ user `distro_slug` }}/pillar",
      "custom_state": "noop-placeholder",
      "bootstrap_args": "{{ user `bootstrap_args` }} git v{{ user `bootstrap_version` }}"
    },
    {
      "type": "file",
      "generated": true,
      "source": ".tmp/{{ user `distro_slug` }}/pillar",
      "destination": "/tmp/pillar",
      "direction": "upload"
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -rf /srv/pillar",
        "sudo mv /tmp/pillar /srv",
        "sudo salt-call -ldebug --local state.sls {{ user `state_name` }} --retcode-passthrough",
        "sudo rm -rf /srv/pillar/* /tmp/pillar"
      ]
    },
    {
      "type": "shell-local",
      "script": "os-images/Docker/files/prep-linux.sh",
      "environment_vars": [
        "SALT_PR={{ user `salt_pr` }}",
        "DISTRO_SLUG={{ user `distro_slug` }}",
        "PY_VERSION=3"
      ]
    },
    {
      "type": "file",
      "generated": true,
      "source": ".tmp/{{ user `distro_slug` }}/pillar",
      "destination": "/tmp/pillar",
      "direction": "upload"
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -rf /srv/pillar",
        "sudo mv /tmp/pillar /srv",
        "sudo salt-call -ldebug --local state.sls {{ user `state_name` }} --retcode-passthrough",
        "sudo rm -rf /srv/pillar /srv/salt /tmp/salt /tmp/pillar"
      ],
      "pause_after": "5s"
    },
    {
      "type": "shell",
      "script": "os-images/Docker/files/cleanup-linux.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{ user `docker_repository` }}/{{ user `build_type` | lower }}-{{ user `os_name` | lower }}-{{ user `os_version` }}",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
